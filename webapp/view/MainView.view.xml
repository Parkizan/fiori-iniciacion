<mvc:View controllerName="logaligroup.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    >

    <Page id="page" title="{i18n>title}">
        <content>
            <Panel headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" labelFor="shipName" text="Ship Name" class="sapUiSmallMargin"/>
                <Input id="shipName" width="200px" class="sapUiSmallMarginEnd"/>
                <Label id="labelCountry" text="Country" class="sapUiSmallMarginEnd"/>
            </Panel>
        </content>
    </Page>
</mvc:View>
